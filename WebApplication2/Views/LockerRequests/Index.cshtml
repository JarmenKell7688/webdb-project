@model IEnumerable<WebApplication2.Models.LockerRequest>
@{
    ViewData["Title"] = "Locker Requests";
}

<div class="container-fluid mt-4">
    <h2>Locker Requests</h2>
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
    
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th style="width: 15%">@Html.DisplayNameFor(model => model.Name)</th>
                    <th style="width: 10%">@Html.DisplayNameFor(model => model.IdNumber)</th>
                    <th style="width: 10%">@Html.DisplayNameFor(model => model.LockerNumber)</th>
                    <th style="width: 12%">@Html.DisplayNameFor(model => model.Semester)</th>
                    <th style="width: 12%">@Html.DisplayNameFor(model => model.ContactNumber)</th>
                    <th style="width: 12%">@Html.DisplayNameFor(model => model.ApplicationDate)</th>
                    <th style="width: 10%">Status</th>
                    <th style="width: 19%">Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.LockerNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.Semester)</td>
                    <td>@Html.DisplayFor(modelItem => item.ContactNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.ApplicationDate)</td>
                    <td>
                        <span class="badge bg-@(item.Status == "Approved" ? "success" : item.Status == "Denied" ? "danger" : "warning")">
                            @item.Status
                        </span>
                    </td>
                    <td>
                        @if (User.IsInRole("Admin") && item.Status == "Pending")
                        {
                            <form method="post" asp-controller="Admin" asp-action="ApproveLockerRequest" asp-route-id="@item.Id" style="display:inline;">
                                <button type="submit" class="btn btn-success btn-sm">Approve</button>
                            </form>
                            <form method="post" asp-controller="Admin" asp-action="DenyLockerRequest" asp-route-id="@item.Id" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Deny</button>
                            </form>
                            <br />
                        }
                        
                        @if (!string.IsNullOrEmpty(item.CreatedBy) && item.CreatedBy == User.Identity.Name)
                        {
                            @:@Html.ActionLink("Edit", "Edit", new { id = item.Id }) | 
                            @:@Html.ActionLink("Details", "Details", new { id = item.Id }) | 
                            @:@Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>