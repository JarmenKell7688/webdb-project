@model IEnumerable<WebApplication2.Models.Reservation>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid mt-4">
    <h2>Reservations</h2>
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th style="width: 8%">@Html.DisplayNameFor(model => model.ApplicationDate)</th>
                    <th style="width: 12%">@Html.DisplayNameFor(model => model.OrganizationName)</th>
                    <th style="width: 10%">@Html.DisplayNameFor(model => model.ActivityTitle)</th>
                    <th style="width: 8%">@Html.DisplayNameFor(model => model.Venue)</th>
                    <th style="width: 8%">@Html.DisplayNameFor(model => model.DateNeeded)</th>
                    <th style="width: 6%">@Html.DisplayNameFor(model => model.TimeFrom)</th>
                    <th style="width: 6%">@Html.DisplayNameFor(model => model.TimeTo)</th>
                    <th style="width: 10%">@Html.DisplayNameFor(model => model.Participants)</th>
                    <th style="width: 8%">@Html.DisplayNameFor(model => model.Speaker)</th>
                    <th style="width: 8%">@Html.DisplayNameFor(model => model.Purpose)</th>
                    <th style="width: 8%">@Html.DisplayNameFor(model => model.NatureOfActivity)</th>
                    <th style="width: 8%">Status</th>
                    <th style="width: 10%">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.ApplicationDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.OrganizationName)</td>
                        <td>@Html.DisplayFor(modelItem => item.ActivityTitle)</td>
                        <td>@Html.DisplayFor(modelItem => item.Venue)</td>
                        <td>@Html.DisplayFor(modelItem => item.DateNeeded)</td>
                        <td>@item.TimeFrom.ToString("hh\\:mm")</td>
                        <td>@item.TimeTo.ToString("hh\\:mm")</td>
                        <td>@Html.DisplayFor(modelItem => item.Participants)</td>
                        <td>@Html.DisplayFor(modelItem => item.Speaker)</td>
                        <td>@Html.DisplayFor(modelItem => item.Purpose)</td>
                        <td>@Html.DisplayFor(modelItem => item.NatureOfActivity)</td>
                        <td>
                            <span class="badge bg-@(item.Status == "Approved" ? "success" : item.Status == "Denied" ? "danger" : "warning")">
                                @item.Status
                            </span>
                        </td>
                        <td>
                            @if (User.IsInRole("Admin") && item.Status == "Pending")
                            {
                                <form method="post" asp-controller="Admin" asp-action="ApproveReservation" asp-route-id="@item.Id" style="display:inline;">
                                    <button type="submit" class="btn btn-success btn-sm">Approve</button>
                                </form>
                                <form method="post" asp-controller="Admin" asp-action="DenyReservation" asp-route-id="@item.Id" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm">Deny</button>
                                </form>
                                <br />
                            }

                            @if (!string.IsNullOrEmpty(item.CreatedBy) && item.CreatedBy == User.Identity.Name)
                            {
                                @:@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @:@Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @:@Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>