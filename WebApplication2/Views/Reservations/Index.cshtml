@model IEnumerable<WebApplication2.Models.Reservation>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrganizationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActivityTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateNeeded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Participants)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Speaker)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Purpose)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EquipmentNeeded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NatureOfActivity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SourceOfFunds)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrganizationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Venue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateNeeded)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Participants)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Speaker)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Purpose)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EquipmentNeeded)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NatureOfActivity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SourceOfFunds)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @if (User.IsInRole("Admin") && item.Status == "Pending")
                {
                    <form method="post" asp-controller="Admin" asp-action="ApproveLockerRequest" asp-route-id="@item.Id" style="display:inline;">
                        <button type="submit" class="btn btn-success btn-sm">Approve</button>
                    </form>
                    <form method="post" asp-controller="Admin" asp-action="DenyLockerRequest" asp-route-id="@item.Id" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Deny</button>
                    </form>
                    <br />
                }

                @if (!string.IsNullOrEmpty(item.CreatedBy) && item.CreatedBy == User.Identity.Name)
                {
                    @:@Html.ActionLink("Edit", "Edit", new { id = item.Id }) | @Html.ActionLink("Details",
                    "Details", new { id = item.Id }) | @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                }
            </td>
        </tr>
}
    </tbody>
</table>
