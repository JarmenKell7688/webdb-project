@model IEnumerable<WebApplication2.Models.GatePass>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid mt-4">
    <h2>Gate Passes</h2>
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th style="width: 8%">@Html.DisplayNameFor(model => model.SchoolYear)</th>
                    <th style="width: 10%">@Html.DisplayNameFor(model => model.Name)</th>
                    <th style="width: 12%">@Html.DisplayNameFor(model => model.Address)</th>
                    <th style="width: 8%">@Html.DisplayNameFor(model => model.ApplicationDate)</th>
                    <th style="width: 8%">@Html.DisplayNameFor(model => model.StaffType)</th>
                    <th style="width: 10%">@Html.DisplayNameFor(model => model.Department)</th>
                    <th style="width: 8%">@Html.DisplayNameFor(model => model.CourseAndYear)</th>
                    <th style="width: 8%">@Html.DisplayNameFor(model => model.VehiclePlateNo)</th>
                    <th style="width: 8%">@Html.DisplayNameFor(model => model.RegistrationExpiryDate)</th>
                    <th style="width: 6%">@Html.DisplayNameFor(model => model.VehicleType)</th>
                    <th style="width: 6%">@Html.DisplayNameFor(model => model.Maker)</th>
                    <th style="width: 6%">@Html.DisplayNameFor(model => model.Color)</th>
                    <th style="width: 8%">Status</th>
                    <th style="width: 10%">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.SchoolYear)</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Address)</td>
                        <td>@Html.DisplayFor(modelItem => item.ApplicationDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.StaffType)</td>
                        <td>@Html.DisplayFor(modelItem => item.Department)</td>
                        <td>@Html.DisplayFor(modelItem => item.CourseAndYear)</td>
                        <td>@Html.DisplayFor(modelItem => item.VehiclePlateNo)</td>
                        <td>@Html.DisplayFor(modelItem => item.RegistrationExpiryDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.VehicleType)</td>
                        <td>@Html.DisplayFor(modelItem => item.Maker)</td>
                        <td>@Html.DisplayFor(modelItem => item.Color)</td>
                        <td>
                            <span class="badge bg-@(item.Status == "Approved" ? "success" : item.Status == "Denied" ? "danger" : "warning")">
                                @item.Status
                            </span>
                        </td>
                        <td>
                            @if (User.IsInRole("Admin") && item.Status == "Pending")
                            {
                                <form method="post" asp-controller="Admin" asp-action="ApproveGatePass" asp-route-id="@item.Id" style="display:inline;">
                                    <button type="submit" class="btn btn-success btn-sm">Approve</button>
                                </form>
                                <form method="post" asp-controller="Admin" asp-action="DenyGatePass" asp-route-id="@item.Id" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm">Deny</button>
                                </form>
                                <br />
                            }

                            @if (!string.IsNullOrEmpty(item.CreatedBy) && item.CreatedBy == User.Identity.Name)
                            {
                                @:@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @:@Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @:@Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>