@model IEnumerable<WebApplication2.Models.GatePass>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SchoolYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StaffType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseAndYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehiclePlateNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationExpiryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Maker)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SchoolYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StaffType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseAndYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehiclePlateNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationExpiryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Maker)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>

            <td>
                @if (User.IsInRole("Admin") && item.Status == "Pending")
                {
                    <form method="post" asp-controller="Admin" asp-action="ApproveLockerRequest" asp-route-id="@item.Id" style="display:inline;">
                        <button type="submit" class="btn btn-success btn-sm">Approve</button>
                    </form>
                    <form method="post" asp-controller="Admin" asp-action="DenyLockerRequest" asp-route-id="@item.Id" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Deny</button>
                    </form>
                    <br />
                }

                @if (!string.IsNullOrEmpty(item.CreatedBy) && item.CreatedBy == User.Identity.Name)
                {
                    @:@Html.ActionLink("Edit", "Edit", new { id = item.Id }) | @Html.ActionLink("Details",
                    "Details", new { id = item.Id }) | @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                }
            </td>
        </tr>
}
    </tbody>
</table>
