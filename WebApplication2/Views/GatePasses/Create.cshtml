@model WebApplication2.Models.GatePass

@{
    ViewData["Title"] = "Create";
}

<hr />
<div class="row">
    <div class="container mt-4">
        <h2>Create Gate Pass</h2>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="SchoolYear" class="form-label"></label>
                    <input asp-for="SchoolYear" class="form-control" />
                    <span asp-validation-for="SchoolYear" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Address" class="form-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="ApplicationDate" class="form-label"></label>
                    <input asp-for="ApplicationDate" class="form-control" type="date" />
                    <span asp-validation-for="ApplicationDate" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="StaffType" class="form-label"></label>
                    <select asp-for="StaffType" class="form-control">
                        <option value="">Select...</option>
                        <option value="Non-Teaching">Non-Teaching Staff</option>
                        <option value="Faculty">Faculty</option>
                    </select>
                    <span asp-validation-for="StaffType" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Department" class="form-label"></label>
                    <input asp-for="Department" class="form-control" />
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="CourseAndYear" class="form-label"></label>
                    <input asp-for="CourseAndYear" class="form-control" />
                    <span asp-validation-for="CourseAndYear" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="VehiclePlateNo" class="form-label"></label>
                    <input asp-for="VehiclePlateNo" class="form-control" />
                    <span asp-validation-for="VehiclePlateNo" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="RegistrationExpiryDate" class="form-label"></label>
                    <input asp-for="RegistrationExpiryDate" class="form-control" type="date" />
                    <span asp-validation-for="RegistrationExpiryDate" class="text-danger"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="VehicleType" class="form-label"></label>
                    <input asp-for="VehicleType" class="form-control" />
                    <span asp-validation-for="VehicleType" class="text-danger"></span>
                </div>

                <div class="col-md-4 mb-3">
                    <label asp-for="Maker" class="form-label"></label>
                    <input asp-for="Maker" class="form-control" />
                    <span asp-validation-for="Maker" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 mb-3">
                    <label asp-for="Color" class="form-label"></label>
                    <input asp-for="Color" class="form-control" />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
